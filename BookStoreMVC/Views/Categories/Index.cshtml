@model List<BookStoreMVC.Models.CategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-4">@ViewData["Title"]</h1>
                @if (ViewBag.Message != null)
                {
                    <p class="lead text-muted">@ViewBag.Message</p>
                }
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 category-card">
                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                        {
                            <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name"
                                 style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center"
                                 style="height: 250px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="fas fa-folder-open fa-5x text-white"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h4 class="card-title text-center">@category.Name</h4>

                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <p class="card-text text-muted text-center">@category.Description</p>
                            }

                            <div class="mt-auto text-center">
                                <div class="mb-3">
                                    <span class="badge bg-info fs-6">
                                        <i class="fas fa-book"></i> Kitap Sayısı: @category.Books.Count
                                    </span>
                                </div>

                                <div class="btn-group w-100" role="group">
                                    <a href="@Url.Action("Details", new { id = category.Id })"
                                       class="btn btn-primary">
                                        <i class="fas fa-eye"></i> Detayları Görüntüle
                                    </a>
                                    <a href="@Url.Action("Index", "Books", new { categoryId = category.Id })"
                                       class="btn btn-outline-primary">
                                        <i class="fas fa-book-open"></i> Kitapları Listele
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Quick Stats -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h3 class="text-primary">@Model.Count</h3>
                                <p class="text-muted">Toplam Kategori</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-success">@Model.Sum(c => c.Books.Count)</h3>
                                <p class="text-muted">Toplam Kitap</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-info">@Model.Where(c => c.Books.Any()).Count()</h3>
                                <p class="text-muted">Aktif Kategori</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-warning">@(Model.Any() ? Model.Max(c => c.Books.Count) : 0)</h3>
                                <p class="text-muted">En Fazla Kitap</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-folder-open fa-5x text-muted mb-3"></i>
            <h3>Henüz Kategori Bulunmuyor</h3>
            <p class="text-muted">Şu anda görüntülenecek kategori bulunmamaktadır.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="fas fa-home"></i> Ana Sayfaya Dön
            </a>
        </div>
    }
</div>