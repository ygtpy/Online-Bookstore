@{
    ViewData["Title"] = "Hakkımızda";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-4">@ViewData["Title"]</h1>
                <p class="lead text-muted">@ViewData["Message"]</p>
            </div>

            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="row align-items-center mb-4">
                        <div class="col-md-4 text-center">
                            <i class="fas fa-book-open fa-5x text-primary mb-3"></i>
                        </div>
                        <div class="col-md-8">
                            <h3>Misyonumuz</h3>
                            <p class="text-muted">
                                Kitap severlere en kaliteli kitapları en uygun fiyatlarla sunmak ve
                                okuma kültürünün yaygınlaşmasına katkıda bulunmaktır.
                            </p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row align-items-center mb-4">
                        <div class="col-md-8">
                            <h3>Vizyonumuz</h3>
                            <p class="text-muted">
                                Türkiye'nin en güvenilir ve kapsamlı online kitap mağazası olmak,
                                her yaştan okuyucuya hitap eden geniş bir kitap koleksiyonu sunmaktır.
                            </p>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="fas fa-eye fa-5x text-primary mb-3"></i>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="text-center">
                        <h3 class="mb-4">Neden Biz?</h3>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="p-3">
                                    <i class="fas fa-star fa-2x text-warning mb-2"></i>
                                    <h5>Kaliteli Ürünler</h5>
                                    <p class="text-muted small">Sadece orijinal ve kaliteli kitaplar</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="p-3">
                                    <i class="fas fa-shipping-fast fa-2x text-success mb-2"></i>
                                    <h5>Hızlı Teslimat</h5>
                                    <p class="text-muted small">Türkiye geneli ücretsiz kargo</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="p-3">
                                    <i class="fas fa-headset fa-2x text-info mb-2"></i>
                                    <h5>Müşteri Desteği</h5>
                                    <p class="text-muted small">7/24 müşteri hizmetleri</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-light p-4 rounded mt-4">
                        <h4 class="text-center mb-3">İstatistiklerimiz</h4>
                        <div class="row text-center">
                            <div class="col-3">
                                <h2 class="text-primary">50K+</h2>
                                <p class="text-muted">Kitap</p>
                            </div>
                            <div class="col-3">
                                <h2 class="text-primary">100K+</h2>
                                <p class="text-muted">Müşteri</p>
                            </div>
                            <div class="col-3">
                                <h2 class="text-primary">500+</h2>
                                <p class="text-muted">Yayınevi</p>
                            </div>
                            <div class="col-3">
                                <h2 class="text-primary">99%</h2>
                                <p class="text-muted">Memnuniyet</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>