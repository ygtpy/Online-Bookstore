@model List<BookStoreMVC.Models.BookDto>
@{
    ViewData["Title"] = "Kitap Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as List<BookStoreMVC.Models.CategoryDto>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kitap Yönetimi</h2>
        <a href="@Url.Action("CreateBook")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Kitap Ekle
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Resim</th>
                                <th>Başlık</th>
                                <th>Yazar</th>
                                <th>Kategori</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(book.ImageUrl))
                                        {
                                            <img src="@book.ImageUrl" class="img-thumbnail" alt="@book.Title"
                                                 style="width: 50px; height: 50px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center rounded"
                                                 style="width: 50px; height: 50px;">
                                                <i class="fas fa-book text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@book.Title</strong>
                                        <br>
                                        <small class="text-muted">@((book.Description != null ? book.Description.Substring(0, Math.Min(50, book.Description.Length)) : ""))...</small>
                                    </td>
                                    <td>@book.Author</td>
                                    <td>
                                        @if (book.Category != null)
                                        {
                                            <span class="badge bg-secondary">@book.Category.Name</span>
                                        }
                                    </td>
                                    <td>
                                        <strong class="text-success">@book.Price.ToString("C2")</strong>
                                    </td>
                                    <td>
                                        @if (book.Stock > 0)
                                        {
                                            <span class="badge bg-success">@book.Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Stokta Yok</span>
                                        }
                                    </td>
                                    <td>
                                        @if (book.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("EditBook", new { id = book.Id })"
                                               class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    onclick="deleteBook(@book.Id, '@book.Title')" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <a href="@Url.Action("Details", "Books", new { id = book.Id })"
                                               class="btn btn-sm btn-outline-info" title="Görüntüle" target="_blank">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-book fa-5x text-muted mb-3"></i>
                <h3>Henüz kitap bulunmuyor</h3>
                <p class="text-muted">İlk kitabınızı eklemek için aşağıdaki butona tıklayın.</p>
                <a href="@Url.Action("CreateBook")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> İlk Kitabı Ekle
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteBook(bookId, bookTitle) {
            if (confirm('Emin misiniz? "' + bookTitle + '" kitabını silmek istediğinizden emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("DeleteBook")/' + bookId,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Bir hata oluştu. Lütfen tekrar deneyin.');
                    }
                });
            }
        }
    </script>
}