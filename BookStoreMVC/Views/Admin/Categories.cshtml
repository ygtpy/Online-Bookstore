@model List<BookStoreMVC.Models.CategoryDto>
@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Kategori Yönetimi</h2>
        <a href="@Url.Action("CreateCategory")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Kategori Ekle
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow">
                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                        {
                            <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name"
                                 style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center"
                                 style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="fas fa-folder-open fa-3x text-white"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@category.Name</h5>

                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <p class="card-text text-muted">@category.Description</p>
                            }

                            <div class="mt-auto">
                                <div class="row text-center mb-3">
                                    <div class="col-6">
                                        <h6 class="text-primary">@category.Books.Count</h6>
                                        <small class="text-muted">Kitap Sayısı</small>
                                    </div>
                                    <div class="col-6">
                                        @if (category.IsActive)
                                        {
                                            <h6 class="text-success">Aktif</h6>
                                        }
                                        else
                                        {
                                            <h6 class="text-secondary">Pasif</h6>
                                        }
                                        <small class="text-muted">Durum</small>
                                    </div>
                                </div>

                                <div class="btn-group w-100" role="group">
                                    <a href="@Url.Action("EditCategory", new { id = category.Id })"
                                       class="btn btn-outline-primary" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger"
                                            onclick="deleteCategory(@category.Id, '@category.Name')" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <a href="@Url.Action("Details", "Categories", new { id = category.Id })"
                                       class="btn btn-outline-info" title="Görüntüle" target="_blank">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Index", "Books", new { categoryId = category.Id })"
                                       class="btn btn-outline-success" title="Kitapları Görüntüle" target="_blank">
                                        <i class="fas fa-book"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Statistics -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-3">Kategori İstatistikleri</h5>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4 class="text-primary">@Model.Count</h4>
                                <p class="text-muted">Toplam Kategori</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-success">@Model.Count(c => c.IsActive)</h4>
                                <p class="text-muted">Aktif Kategori</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-info">@Model.Sum(c => c.Books.Count)</h4>
                                <p class="text-muted">Toplam Kitap</p>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-warning">@(Model.Any() ? Model.Max(c => c.Books.Count) : 0)</h4>
                                <p class="text-muted">En Fazla Kitap</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-folder-open fa-5x text-muted mb-3"></i>
                <h3>Henüz kategori bulunmuyor</h3>
                <p class="text-muted">İlk kategoriyi eklemek için aşağıdaki butona tıklayın.</p>
                <a href="@Url.Action("CreateCategory")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> İlk Kategoriyi Ekle
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteCategory(categoryId, categoryName) {
            if (confirm('Emin misiniz? "' + categoryName + '" kategorisini silmek istediğinizden emin misiniz?\n\nBu kategoriyle ilişkili kitaplar da etkilenebilir.')) {
                $.ajax({
                    url: '@Url.Action("DeleteCategory")/' + categoryId,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Bir hata oluştu. Lütfen tekrar deneyin.');
                    }
                });
            }
        }
    </script>
}