@model List<BookStoreMVC.Models.BookDto>
@{
    ViewData["Title"] = "Kitaplar";
    var categories = ViewBag.Categories as List<BookStoreMVC.Models.CategoryDto>;
}

<div class="row">
    <!-- Filters Sidebar -->
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-filter"></i> Filtreler</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index">
                    <!-- Search -->
                    <div class="mb-3">
                        <label for="search" class="form-label">Arama</label>
                        <input type="text" class="form-control" id="search" name="search" 
                               value="@ViewBag.SearchTerm" placeholder="Kitap adı veya yazar...">
                    </div>
                    
                    <!-- Category Filter -->
                    <div class="mb-3">
                        <label for="categoryId" class="form-label">Kategori</label>
                        <select class="form-select" id="categoryId" name="categoryId">
                            <option value="">Tüm Kategoriler</option>
                            @if (categories != null)
                            {
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id" selected="@(ViewBag.SelectedCategoryId?.ToString() == category.Id.ToString() ? "selected" : null)">
                                        @category.Name
                                    </option>

                                }
                            }
                        </select>
                    </div>
                    
                    <!-- Price Range -->
                    <div class="mb-3">
                        <label class="form-label">Fiyat Aralığı</label>
                        <div class="row">
                            <div class="col-6">
                                <input type="number" class="form-control" name="minPrice" 
                                       value="@ViewBag.MinPrice" placeholder="Min" step="0.01">
                            </div>
                            <div class="col-6">
                                <input type="number" class="form-control" name="maxPrice" 
                                       value="@ViewBag.MaxPrice" placeholder="Max" step="0.01">
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Filtrele
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100 mt-2">
                        <i class="fas fa-undo"></i> Temizle
                    </a>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Books Grid -->
    <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Kitaplar</h2>
            <span class="text-muted">@Model.Count kitap bulundu</span>
        </div>
        
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var book in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 book-card">
                            @if (!string.IsNullOrEmpty(book.ImageUrl))
                            {
                                <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" 
                                     style="height: 250px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                     style="height: 250px;">
                                    <i class="fas fa-book fa-3x text-muted"></i>
                                </div>
                            }
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text text-muted"><i class="fas fa-user"></i> @book.Author</p>
                                
                                @if (book.Category != null)
                                {
                                    <p class="card-text">
                                        <span class="badge bg-secondary">@book.Category.Name</span>
                                    </p>
                                }
                                
                                @if (!string.IsNullOrEmpty(book.Description) && book.Description.Length > 80)
                                {
                                    <p class="card-text">@book.Description.Substring(0, 80)...</p>
                                }
                                else
                                {
                                    <p class="card-text">@book.Description</p>
                                }
                                
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="h5 text-primary mb-0">@book.Price.ToString("C2")</span>
                                        @if (book.Stock > 0)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Stokta (@book.Stock adet)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Stokta Yok
                                            </span>
                                        }
                                    </div>
                                    
                                    <div class="btn-group w-100" role="group">
                                        <a href="@Url.Action("Details", new { id = book.Id })" 
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-eye"></i> Detay
                                        </a>
                                        
                                        @if (book.Stock > 0)
                                        {
                                            <button type="button" class="btn btn-primary" onclick="addToCart(@book.Id)">
                                                <i class="fas fa-cart-plus"></i> Sepete Ekle
                                            </button>
                                        }
                                        
                                        <button type="button" class="btn btn-outline-danger" onclick="addToFavorites(@book.Id)">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-search fa-5x text-muted mb-3"></i>
                <h3>Kitap Bulunamadı</h3>
                <p class="text-muted">Arama kriterlerinize uygun kitap bulunamadı.</p>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-undo"></i> Tüm Kitapları Görüntüle
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function addToCart(bookId) {
            $.ajax({
                url: '@Url.Action("AddToCart")',
                type: 'POST',
                data: { bookId: bookId, quantity: 1 },
                success: function(response) {
                    if (response.success) {
                        $('#cart-count').text(response.cartCount);
                        showAlert('success', response.message);
                    } else {
                        showAlert('danger', response.message);
                    }
                },
                error: function() {
                    showAlert('danger', 'Bir hata oluştu. Lütfen tekrar deneyin.');
                }
            });
        }
        
        function addToFavorites(bookId) {
            $.ajax({
                url: '@Url.Action("AddToFavorites")',
                type: 'POST',
                data: { bookId: bookId },
                success: function(response) {
                    if (response.success) {
                        showAlert('info', response.message);
                    } else {
                        showAlert('warning', response.message);
                    }
                },
                error: function() {
                    showAlert('danger', 'Bir hata oluştu. Lütfen tekrar deneyin.');
                }
            });
        }
        
        function showAlert(type, message) {
            var alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                           message +
                           '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                           '</div>';
            
            $('main').prepend(alertHtml);
            
            setTimeout(function() {
                $('.alert').alert('close');
            }, 3000);
        }
    </script>
}