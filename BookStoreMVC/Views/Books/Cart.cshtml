@model BookStoreMVC.Models.Cart
@{
    ViewData["Title"] = "Sepetim";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-shopping-cart"></i> @ViewData["Title"]</h2>
            <hr>
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model.Items)
                        {
                            <div class="row cart-item border-bottom py-3" id="item-@item.BookId">
                                <div class="col-md-2">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.Title">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 80px;">
                                            <i class="fas fa-book text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@item.Title</h6>
                                    <p class="text-muted small mb-0">@item.Author</p>
                                </div>
                                <div class="col-md-2">
                                    <p class="mb-0"><strong>@item.Price.ToString("C2")</strong></p>
                                </div>
                                <div class="col-md-2">
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary btn-sm" type="button"
                                                onclick="updateQuantity(@item.BookId, @(item.Quantity - 1))">
                                            -
                                        </button>
                                        <input type="text" class="form-control form-control-sm text-center"
                                               value="@item.Quantity" readonly style="max-width: 50px;">
                                        <button class="btn btn-outline-secondary btn-sm" type="button"
                                                onclick="updateQuantity(@item.BookId, @(item.Quantity + 1))">
                                            +
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2 text-end">
                                    <p class="mb-1"><strong>@item.TotalPrice.ToString("C2")</strong></p>
                                    <button class="btn btn-outline-danger btn-sm"
                                            onclick="removeFromCart(@item.BookId)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Sipariş Özeti</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Ürün Sayısı:</span>
                            <span id="total-items">@Model.GetTotalQuantity()</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Ara Toplam:</span>
                            <span id="subtotal">@ViewBag.CartTotal.ToString("C2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Kargo:</span>
                            <span class="text-success">Ücretsiz</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Toplam:</strong>
                            <strong id="total-amount">@ViewBag.CartTotal.ToString("C2")</strong>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Checkout")" class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card"></i> Siparişi Tamamla
                            </a>
                            <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left"></i> Alışverişe Devam Et
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
            <h3>Sepetiniz Boş</h3>
            <p class="text-muted">Henüz sepetinize ürün eklemediniz.</p>
            <a href="@Url.Action("Index")" class="btn btn-primary">
                <i class="fas fa-book"></i> Kitapları Keşfet
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateQuantity(bookId, newQuantity) {
            if (newQuantity < 1) {
                removeFromCart(bookId);
                return;
            }

            $.ajax({
                url: '@Url.Action("UpdateCart")',
                type: 'POST',
                data: { bookId: bookId, quantity: newQuantity },
                success: function(response) {
                    if (response.success) {
                        location.reload(); // Reload to update UI
                    }
                },
                error: function() {
                    alert('Bir hata oluştu. Lütfen tekrar deneyin.');
                }
            });
        }

        function removeFromCart(bookId) {
            if (confirm('Bu ürünü sepetten çıkarmak istediğinizden emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("RemoveFromCart")',
                    type: 'POST',
                    data: { bookId: bookId },
                    success: function(response) {
                        if (response.success) {
                            $('#item-' + bookId).fadeOut(300, function() {
                                $(this).remove();
                                if ($('.cart-item').length === 0) {
                                    location.reload();
                                }
                            });
                            $('#cart-count').text(response.cartCount);
                            $('#total-amount').text(response.cartTotal.toLocaleString('tr-TR', {style: 'currency', currency: 'TRY'}));
                        }
                    },
                    error: function() {
                        alert('Bir hata oluştu. Lütfen tekrar deneyin.');
                    }
                });
            }
        }
    </script>
}